    <p id="contador">Você clicou 0 vezes.</p>
    <button onclick="incrementar()">Clique aqui</button>

    <script>
      let count = 0;
      function incrementar() {
        count++;
        document.getElementById("contador").textContent = `Você clicou ${count} vezes.`;
      }
    </script>
